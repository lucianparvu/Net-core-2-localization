        if (ZoneTypeActions?.Count() > 0)
        {
            if (!_MainApp.PageState.IsBlazorConnected && !IsRendered && !string.IsNullOrEmpty(thisname) && !string.IsNullOrEmpty(_MainApp.PageState.CacheKeyGuid))
